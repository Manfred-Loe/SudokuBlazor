@page "/input_sudoku"
@inject NavigationManager UriHelper
@inject SudokuFactory SudokuFactory
@inject IDialogService DialogService

<div class="d-flex flex-grow-1 gap-1" style="width: 1100px;">
	<MudPaper Height="660px" Width="660px" Class="d-flex align-center justify-center ma-2" Square="true"
		Outlined="true">
		@if (_typeMode)
		{
			<MudGrid Spacing="0" Class="align-center" Justify="Justify.Center">
				@for (int y = 0; y < 9; y++)
				{
					int tempy = y;

					@for (int x = 0; x < 9; x++)
					{
						int tempx = x;
						string s = GetBorderStyle(tempx, tempy);
						<MudItem>
							<MudPaper Elevation="0">
								<BoxPaper BoxCell="SudokuCells[tempx,tempy]" Class="@s" />
							</MudPaper>
						</MudItem>
					}

				}
			</MudGrid>
		}
		else
		{
			<MudGrid Spacing="0" Class="align-center" Justify="Justify.Center">
				@for (int y = 0; y < 9; y++)
				{
					int tempy = y;

					@for (int x = 0; x < 9; x++)
					{
						int tempx = x;
						string s = GetBorderStyle(tempx, tempy);
						<MudItem>
							<MudPaper Elevation="0">
								<ClickBox _Cell="SudokuCells[tempx,tempy]" Class="@s" />
							</MudPaper>
						</MudItem>
					}

				}
			</MudGrid>
		}
	</MudPaper>
	<MudPaper Width="440px" Class="ma-2 justify-center align-center">
		<MudSwitch @bind-Checked="@_typeMode" Color="Color.Primary" Class="ma-4" T="bool"
			Label="Entry Mode Click/Type" />
		<MudButton Class="ma-1" OnClick="SubmitToSolver" Variant="Variant.Filled">Send Puzzle</MudButton>
	</MudPaper>
</div>